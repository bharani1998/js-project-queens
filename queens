// Checkpoint 1 | Creating the queen object
let queen={
  pos:{
    r:0,
    c:4
  },

  direction:S
},
// Checkpoint 2 | Turning the queen
function changeDirection()
{
  var direction=prompt("enter the direction");
  var steps=prompt("enter the steps");
  switch(direction)
  {
   case 'N':
    pos.direction='N';
    break;
    case 'S':
   pos.direction='S';
    break;
    case 'E':
   pos.direction='E';
    break;
    case 'W':
    pos.direction='W';
    break;
    case 'NE':
pos.direction='NE';
    break;
    case 'NW':
   pos.direction='NW';
    break;
    case 'SE':
    pos.direction='SE';
    break;
    case 'SW':
    pos.direction='SW';
    break;
}
// Checkpoint 3 | Moving the queen
switch(direction)
  {
    case 'N':
    queen.pos.r-=steps;
    break;
    case 'S':
    queen.pos.r+=steps;
    break;
    case 'E':
    queen.pos.c+=steps;
    break;
    case 'W':
    queen.pos.c-=steps;
    break;
    case 'NE':
    queen.pos.r-=steps+queen.pos.c+=steps;
    break;
    case 'NW':
    queen.pos.r-=steps+ queen.pos.c-=steps;
    break;
    case 'SE':
    queen.pos.r+=steps+ queen.pos.c+=steps;
    break;
    case 'SW':
    queen.pos.r+=steps+ queen.pos.c-=steps;
    break;
  }
